/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.container {
  padding: 30rpx;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.tag-danger {
  background: #fff0f0;
  color: #8B0000;
}

.tag-warning {
  background: #fff7e6;
  color: #fa8c16;
}

.tag-success {
  background: #f6ffed;
  color: #52c41a;
}

.tag-info {
  background: #e6f7ff;
  color: #1890ff;
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #8B0000 0%, #CD5C5C 100%);
  color: #fff;
  border: none;
  border-radius: 40rpx;
  padding: 24rpx 48rpx;
  font-size: 30rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}
