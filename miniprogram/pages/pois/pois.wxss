/* 景点列表样式 */
.page-pois {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 搜索栏 */
.search-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.search-input-wrap {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.search-clear {
  font-size: 28rpx;
  color: #999;
  padding: 8rpx;
}

/* 景点列表 */
.poi-list {
  padding: 24rpx 30rpx;
}

.poi-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.poi-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  overflow: hidden;
  flex-shrink: 0;
  background: #f0f0f0;
}

.poi-image image {
  width: 100%;
  height: 100%;
}

.poi-info {
  flex: 1;
  margin-left: 24rpx;
  overflow: hidden;
}

.poi-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.poi-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 12rpx;
}

.poi-type {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.tag-celebrity {
  background: #fff7e6;
  color: #fa8c16;
}

.tag-historic {
  background: #fff0f0;
  color: #8B0000;
}

.tag-food {
  background: #f6ffed;
  color: #52c41a;
}

.tag-shop {
  background: #e6f7ff;
  color: #1890ff;
}

.tag-culture {
  background: #f9f0ff;
  color: #722ed1;
}

.poi-brief {
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.poi-location {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.location-icon {
  margin-right: 6rpx;
}

.poi-arrow {
  font-size: 40rpx;
  color: #ccc;
  margin-left: 12rpx;
}
