/* 详情页样式 */
.page-detail {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 图片轮播 */
.image-swiper {
  width: 100%;
  height: 500rpx;
}

.image-swiper image {
  width: 100%;
  height: 100%;
}

.image-placeholder {
  width: 100%;
  height: 400rpx;
  background: linear-gradient(135deg, #8B0000 0%, #CD5C5C 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 120rpx;
}

/* 头部信息 */
.detail-header {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.header-top {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.poi-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.poi-type {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
}

.tag-celebrity {
  background: #fff7e6;
  color: #fa8c16;
}

.tag-historic {
  background: #fff0f0;
  color: #8B0000;
}

.tag-food {
  background: #f6ffed;
  color: #52c41a;
}

.tag-shop {
  background: #e6f7ff;
  color: #1890ff;
}

.tag-culture {
  background: #f9f0ff;
  color: #722ed1;
}

.poi-location {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.location-icon {
  margin-right: 8rpx;
}

/* 详情卡片 */
.detail-cards {
  padding: 0 30rpx;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #8B0000;
}

.card-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.description {
  text-align: justify;
  text-indent: 2em;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: #999;
}
