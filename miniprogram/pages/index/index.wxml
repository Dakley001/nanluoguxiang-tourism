<!-- 首页 - 胡同概览 -->
<view class="page-index">
  <!-- 头部横幅 -->
  <view class="hero">
    <view class="hero-bg"></view>
    <view class="hero-content">
      <text class="hero-icon">🏮</text>
      <text class="hero-title">{{hutong.name || '南锣鼓巷'}}</text>
      <text class="hero-subtitle">北京最具特色的历史文化街区</text>
    </view>
  </view>

  <!-- 特色标签 -->
  <view class="tags-section" wx:if="{{hutong.features}}">
    <view class="tag tag-danger" wx:for="{{hutong.features}}" wx:key="*this">
      {{item}}
    </view>
  </view>

  <!-- 快捷入口 -->
  <view class="quick-entry">
    <view class="entry-item" bindtap="goToPois">
      <view class="entry-icon">🏠</view>
      <text class="entry-text">景点列表</text>
      <text class="entry-count">{{poiCount}}个景点</text>
    </view>
    <view class="entry-item" bindtap="goToRoutes">
      <view class="entry-icon">🗺️</view>
      <text class="entry-text">推荐路线</text>
      <text class="entry-count">{{routeCount}}条路线</text>
    </view>
  </view>

  <!-- 简介卡片 -->
  <view class="card info-card">
    <view class="card-header">
      <text class="card-icon">📍</text>
      <text class="card-title">地理位置</text>
    </view>
    <text class="card-content">{{hutong.location || '北京市东城区南锣鼓巷'}}</text>
  </view>

  <view class="card info-card">
    <view class="card-header">
      <text class="card-icon">📖</text>
      <text class="card-title">胡同简介</text>
    </view>
    <text class="card-content">{{hutong.description || '加载中...'}}</text>
  </view>

  <view class="card info-card">
    <view class="card-header">
      <text class="card-icon">🏛️</text>
      <text class="card-title">历史沿革</text>
    </view>
    <text class="card-content">{{hutong.history || '加载中...'}}</text>
  </view>
</view>
