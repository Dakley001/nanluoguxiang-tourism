/* 首页样式 */
.page-index {
  padding-bottom: 30rpx;
}

/* 头部横幅 */
.hero {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.hero-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #8B0000 0%, #CD5C5C 50%, #E9967A 100%);
}

.hero-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: #fff;
}

.hero-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.hero-title {
  font-size: 56rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.hero-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 标签区域 */
.tags-section {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  padding: 30rpx;
  background: #fff;
  margin-bottom: 24rpx;
}

/* 快捷入口 */
.quick-entry {
  display: flex;
  padding: 0 30rpx;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.entry-item {
  flex: 1;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.entry-icon {
  font-size: 60rpx;
  margin-bottom: 12rpx;
}

.entry-text {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.entry-count {
  font-size: 24rpx;
  color: #999;
}

/* 信息卡片 */
.info-card {
  margin: 0 30rpx 24rpx;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #8B0000;
}

.card-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}
