/* 路线页样式 */
.page-routes {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #8B0000 0%, #CD5C5C 100%);
  padding: 60rpx 30rpx;
  text-align: center;
  color: #fff;
}

.header-icon {
  font-size: 60rpx;
  display: block;
  margin-bottom: 16rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 路线列表 */
.route-list {
  padding: 30rpx;
}

.route-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.route-header {
  margin-bottom: 20rpx;
}

.route-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #8B0000;
  display: block;
  margin-bottom: 12rpx;
}

.route-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #666;
}

.route-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.7;
  margin-bottom: 24rpx;
}

.btn-detail {
  background: linear-gradient(135deg, #8B0000 0%, #CD5C5C 100%);
  color: #fff;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 16rpx 0;
}

/* 路线详情 */
.route-detail {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.timeline {
  padding-left: 20rpx;
}

.timeline-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.timeline-item:last-child {
  border-bottom: none;
}

.timeline-dot {
  width: 48rpx;
  height: 48rpx;
  background: #8B0000;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.timeline-content {
  flex: 1;
  margin-left: 20rpx;
}

.timeline-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.timeline-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-right: 12rpx;
}

.timeline-type {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
}

.tag-celebrity { background: #fff7e6; color: #fa8c16; }
.tag-historic { background: #fff0f0; color: #8B0000; }
.tag-food { background: #f6ffed; color: #52c41a; }
.tag-shop { background: #e6f7ff; color: #1890ff; }
.tag-culture { background: #f9f0ff; color: #722ed1; }

.timeline-brief {
  font-size: 24rpx;
  color: #999;
}

.timeline-arrow {
  font-size: 36rpx;
  color: #ccc;
  margin-left: 12rpx;
}
